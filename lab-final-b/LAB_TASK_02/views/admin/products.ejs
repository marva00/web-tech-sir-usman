<h1>Manage Products</h1>
<a href="/admin/add-product" class="btn btn-success mb-3">+ Add New Product</a>

<% if (products.length> 0) { %>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product=> { %>
                <tr>
                    <td><img src="<%= product.image %>" alt="<%= product.name %>"
                            style="width: 60px; height: 60px; object-fit: cover;"></td>
                    <td>
                        <%= product.name %>
                    </td>
                    <td>
                        <%= product.category %>
                    </td>
                    <td>$<%= product.price %>
                    </td>
                    <td>
                        <a href="/admin/edit-product/<%= product._id %>?edit=true"
                            class="btn btn-sm btn-warning">Edit</a>
                        <form action="/admin/delete-product" method="POST" style="display: inline;">
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <% } else { %>
        <div class="alert alert-info">No products found. <a href="/admin/add-product">Add one now!</a></div>
        <% } %>