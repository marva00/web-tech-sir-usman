<div class="container py-5">
    <h2 class="mb-4 text-center">
        <span class="highlight">MY</span> ORDERS
    </h2>
    <p class="text-center text-muted mb-5">Enter your email to view your order history</p>

    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <div class="card p-4 shadow-sm">
                <form action="/my-orders" method="GET">
                    <div class="input-group">
                        <input type="email" name="email" class="form-control" placeholder="Enter your email"
                            value="<%= email %>" required>
                        <button type="submit" class="btn btn-primary">Find Orders</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <% if (orders !==null) { %>
        <% if (orders.length===0) { %>
            <div class="alert alert-warning text-center">
                No orders found for <strong>
                    <%= email %>
                </strong>
            </div>
            <% } else { %>
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">Found <%= orders.length %> Order(s)</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th class="text-end">Total Amount</th>
                                    <th class="text-center">Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(order=> { %>
                                    <tr>
                                        <td><small class="text-muted">
                                                <%= order._id %>
                                            </small></td>
                                        <td>
                                            <%= order.createdAt.toLocaleDateString() %>
                                        </td>
                                        <td class="text-end fw-bold text-primary">$<%= order.grandTotal.toFixed(2) %>
                                        </td>
                                        <td class="text-center">
                                            <% let badgeClass='bg-primary' ; %>
                                                <% if (order.status==='Processing' ) badgeClass='bg-warning text-dark' ;
                                                    %>
                                                    <% if (order.status==='Delivered' ) badgeClass='bg-success' ; %>
                                                        <span class="badge <%= badgeClass %>">
                                                            <%= order.status %>
                                                        </span>
                                        </td>
                                        <td>
                                            <a href="/order/success/<%= order._id %>"
                                                class="btn btn-outline-secondary btn-sm">View Summary</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <% } %>
                    <% } %>
</div>