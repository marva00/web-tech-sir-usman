<div class="container py-5">
    <h2 class="mb-4 text-center">
        <span class="highlight">YOUR</span> SHOPPING CART
    </h2>

    <% if (cart.length===0) { %>
        <div class="alert alert-info text-center">
            <h4>Your cart is empty!</h4>
            <p>Browse our products and add items to your cart.</p>
            <a href="/#courses" class="btn btn-primary">Browse Products</a>
        </div>
        <% } else { %>
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">Cart Items (<%= cart.length %>)</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            <% cart.forEach(item=> { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="<%= item.image %>" alt="<%= item.name %>"
                                            style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;"
                                            class="me-3">
                                        <div>
                                            <h6 class="mb-1">
                                                <%= item.name %>
                                            </h6>
                                            <p class="mb-0 text-primary fw-bold">$<%= item.price.toFixed(2) %>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <a href="/cart/update/<%= item.productId %>/decrease"
                                            class="btn btn-outline-secondary btn-sm">-</a>
                                        <span class="mx-3 fw-bold">
                                            <%= item.quantity %>
                                        </span>
                                        <a href="/cart/update/<%= item.productId %>/increase"
                                            class="btn btn-outline-secondary btn-sm">+</a>
                                        <a href="/cart/remove/<%= item.productId %>"
                                            class="btn btn-outline-danger btn-sm ms-3">Remove</a>
                                    </div>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title">Order Summary</h5>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Subtotal:</span>
                                <span class="fw-bold">$<%= grandTotal.toFixed(2) %></span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <span class="fs-5 fw-bold">Grand Total:</span>
                                <span class="fs-5 fw-bold text-primary">$<%= grandTotal.toFixed(2) %></span>
                            </div>

                            <a href="/order/preview" class="btn btn-primary btn-lg w-100 mb-2">
                                Proceed to Order Preview
                            </a>
                            <a href="/#courses" class="btn btn-outline-secondary w-100">
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
</div>