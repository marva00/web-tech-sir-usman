<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card text-center">
                <div class="card-body py-5">
                    <div class="mb-4">
                        <span style="font-size: 80px; color: #28a745;">âœ“</span>
                    </div>

                    <h2 class="card-title text-success mb-3">Order Placed Successfully!</h2>
                    <p class="text-muted mb-4">Thank you for your order. Your order has been confirmed.</p>

                    <div class="bg-light p-4 rounded mb-4">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Order ID:</strong></p>
                                <p class="text-primary fs-5">
                                    <%= order._id %>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Status:</strong></p>
                                <span class="badge bg-success fs-6">
                                    <%= order.status %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <h5 class="mb-3">Order Summary</h5>
                    <table class="table">
                        <thead class="table-dark">
                            <tr>
                                <th>Product</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end">Price</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% order.items.forEach(item=> { %>
                                <tr>
                                    <td class="text-start">
                                        <%= item.name %>
                                    </td>
                                    <td class="text-center">
                                        <%= item.quantity %>
                                    </td>
                                    <td class="text-end">$<%= item.price.toFixed(2) %>
                                    </td>
                                    <td class="text-end">$<%= (item.price * item.quantity).toFixed(2) %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                        <tfoot>
                            <tr class="table-success">
                                <td colspan="3" class="text-end fw-bold">Grand Total:</td>
                                <td class="text-end fw-bold fs-5">$<%= order.grandTotal.toFixed(2) %>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                    <hr>

                    <p class="text-muted small mb-4">
                        Order placed on: <%= order.createdAt.toLocaleString() %>
                    </p>

                    <a href="/" class="btn btn-primary btn-lg">
                        Return to Homepage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>